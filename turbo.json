{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "API_BASE_URL",
    "STORY_PROTOCOL_CONTRACT",
    "IP_ACCOUNT_REGISTRY",
    "NEXT_PUBLIC_API_BASE_URL",
    "NEXT_PUBLIC_STORY_PROTOCOL_CONTRACT",
    "NEXT_PUBLIC_IP_ACCOUNT_REGISTRY",
    "RPC_PROVIDER_URL"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "fix": {
      "cache": false
    },
    "lint": {},
    "lint:fix": {},
    "test": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
